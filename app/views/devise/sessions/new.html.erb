<div class="container mt-4">
  <h5 class="card-title text-center mb-4">Se connecter à DefBlog</h5>
  <div class="row justify-content-center">
    <div class="col-lg-4 col-md-6">
      <div class="card shadow-sm" style="width: 100%; max-width: 400px; margin: auto;">
        <div class="card-body p-4">

          <!-- Formulaire de connexion -->
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs mb-3">
              <%= f.input :email,
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "email", class: "form-control" },
                          label_html: { class: "form-label" } %>

              <!-- Formulaire de mot de passe avec icône dans l'input -->
              <div class="form-group position-relative">
                <%= f.input :password,
                            required: true,
                            input_html: { autocomplete: "current-password", class: "form-control pe-5", id: "password-field", placeholder: "Mot de passe" },
                            label_html: { class: "form-label" } %>

                <button type="button" id="toggle-password" class="btn btn-link position-absolute end-0 top-50 ">
                  <i class="fas fa-eye"></i> <!-- Icône d'œil -->
                </button>
              </div>

              <% if devise_mapping.rememberable? %>
                <div class="form-check my-3">
                  <%= f.input :remember_me,
                              as: :boolean,
                              input_html: { class: "form-check-input" },
                              label_html: { class: "form-check-label" } %>
                </div>
              <% end %>
            </div>
            <!-- Lien Mot de passe oublié -->
            <div class="mt-3 text-end">
              <%= link_to "Mot de passe oublié ?", new_password_path(resource_name), class: "text-decoration-none" %>
            </div>
            <div class="form-actions mt-3">
              <%= f.button :submit, "Se connecter", class: "btn w-100 rounded-16 text-white", style: "background-color: #1c8139;" %>
            </div>


          <% end %>

          <!-- Lien Créer un compte -->
          <div class="mt-4 text-center">
            <%= link_to "Créer un compte", new_registration_path(resource_name), class: "text-decoration-none" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Script JavaScript -->
<script>
  document.getElementById('toggle-password').addEventListener('click', function() {
    var passwordField = document.getElementById('password-field');
    var button = document.getElementById('toggle-password');
    var icon = button.querySelector('i');

    if (passwordField.type === "password") {
      passwordField.type = "text";
      icon.classList.remove('fa-eye');
      icon.classList.add('fa-eye-slash');  // Change l'icône en œil barré
    } else {
      passwordField.type = "password";
      icon.classList.remove('fa-eye-slash');
      icon.classList.add('fa-eye');  // Revert l'icône à œil normal
    }
  });
</script>

