<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title text-center">Se connecter</h5>

          <!-- Formulaire de connexion -->
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email", class: "form-control" },
                          label_html: { class: "form-label" } %>

<div class="input-group">
  <%= f.password_field :password,
    class: "form-control",
    id: "password-field",
    autocomplete: "current-password",
    data: { controller: "toggle-password", toggle_password_target: "password" } %>
  <button type="button"
    class="btn btn-outline-secondary"
    data-action="toggle-password#toggle"
    data-toggle-password-target="buttonText">
    Afficher
  </button>
</div>



              <% if devise_mapping.rememberable? %>
                <div class="form-check mb-3">
                  <%= f.input :remember_me,
                              as: :boolean,
                              input_html: { class: "form-check-input" },
                              label_html: { class: "form-check-label" } %>
                </div>
              <% end %>
            </div>

            <div class="form-actions mt-3">
              <%= f.button :submit, "Se connecter", class: "btn btn-primary w-100" %>
            </div>
          <% end %>
          <!-- Liens supplÃ©mentaires -->
          <div class="form-actions mt-3">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



