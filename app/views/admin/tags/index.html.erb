<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-12 mb-4">

        <!-- Formulaire de création -->
              <div class="card">
        <div class="card-body">
          <h3 class="mt-4">Créer un nouveau Tag</h3>
          <%= form_with(model: Tag.new, url: admin_tags_path, local: true) do |form| %>
            <div class="mb-3">
              <%= form.label :name, "Nom du Tag", class: "form-label" %>
              <%= form.text_field :name, class: "form-control", placeholder: "Entrez le nom du tag" %>
            </div>
            <%= form.submit "Créer le Tag", class: "btn btn-primary" %>
          <% end %>
        </div>
        </div>


      <div class="card">
        <div class="card-body">
          <h1 class="card-title">Gestion des Tags</h1>

          <!-- Table pour afficher les tags -->
          <table class="table table-hover">
            <thead>
              <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @tags.each do |tag| %>
                <tr>
                  <td><%= tag.id %></td>
                  <td><%= tag.name %></td>
                  <td>
                    <!-- Bouton Modifier -->
                    <%= link_to 'Editer', edit_admin_tag_path(tag), class: 'btn btn-warning btn-sm' %>

                    <!-- Bouton Supprimer -->
                    <%= form_with(model: tag, url: admin_tag_path(tag), method: :delete, local: true) do |form| %>
                      <%= form.submit 'Supprimer', class: 'btn btn-danger btn-sm', data: { confirm: "Êtes-vous sûr de vouloir supprimer ce tag ?" } %>
                    <% end %>



                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>



        </div>
      </div>
    </div>
  </div>
</div>
