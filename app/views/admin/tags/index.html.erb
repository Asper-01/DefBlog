<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-12 mb-4">

      <div class="card">
        <div class="card-body">
          <h1 class="card-title">Gestion des Tags</h1>
          <!-- Bouton Retour au dashboard -->
          <%= link_to "Retour au dashboard", "/admin/dashboard", class: "btn btn-outline-secondary w-100 mb-3 mt-3 rounded-custom" %>

          <!-- Table pour afficher les tags -->
          <table class="table table-hover">
            <thead>
              <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @tags.each do |tag| %>
                <tr>
                  <td><%= tag.id %></td>
                  <td><%= tag.name %></td>
                  <td>
                    <!-- Groupement des boutons dans une div avec d-flex -->
                    <div class="d-flex gap-2">
                      <!-- Bouton Modifier (Bleu, bord arrondi) -->
                      <%= link_to 'Editer', edit_admin_tag_path(tag), class: 'btn btn-primary btn-sm rounded-custom' %>

                      <!-- Bouton Supprimer (Rouge, bord arrondi) -->
                      <%= form_with(model: tag, url: admin_tag_path(tag), method: :delete, local: true) do |form| %>
                        <%= form.submit 'Supprimer', class: 'btn btn-danger btn-sm rounded-custom', data: { confirm: "Êtes-vous sûr de vouloir supprimer ce tag ?" } %>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <!-- Pagination -->
        <div class="d-flex justify-content-center mt-3">
          <% if @tags.total_pages > 1 %>  <!-- Vérifiez la pagination des tags -->
  <nav aria-label="Page navigation">
    <ul class="pagination">
      <% if @tags.prev_page %>  <!-- Utilisez @tags pour la pagination -->
        <li class="page-item">
          <%= link_to 'Previous', url_for(page: @tags.prev_page), class: 'page-link' %>
        </li>
      <% else %>
        <li class="page-item disabled">
          <span class="page-link">Previous</span>
        </li>
      <% end %>

      <% (1..@tags.total_pages).each do |page| %>  <!-- Utilisez @tags -->
        <li class="page-item <%= 'active' if page == @tags.current_page %>">
          <%= link_to page, url_for(page: page), class: 'page-link' %>
        </li>
      <% end %>

      <% if @tags.next_page %>  <!-- Utilisez @tags -->
        <li class="page-item">
          <%= link_to 'Next', url_for(page: @tags.next_page), class: 'page-link' %>
        </li>
      <% else %>
        <li class="page-item disabled">
          <span class="page-link">Next</span>
        </li>
      <% end %>
    </ul>
  </nav>
<% end %>

        </div>

      </div>
    </div>
  </div>
</div>
