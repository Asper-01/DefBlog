<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-6 mb-4">
      <!-- Carte pour créer un tag -->
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Créer un nouveau tag</h5>
          <!-- Affichage des erreurs de validation -->
          <% if @tag.errors.any? %>
            <div id="error_explanation" class="alert alert-danger">
              <h2><%= pluralize(@tag.errors.count, "erreur") %> ont empêché ce tag d'être sauvegardé :</h2>
              <ul>
                <% @tag.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <!-- Formulaire de création de tag -->
          <!-- Bouton Retour au dashboard -->
          <%= link_to "Retour au dashboard", "/admin/dashboard", class: "btn btn-outline-secondary w-100 mb-3 mt-3 rounded-custom" %>
          <%= form_with(model: @tag, local: true) do |form| %>
            <!-- Champ nom -->
            <div class="form-group">
              <%= form.label :name, "Nom du Tag", class: "form-label" %>
              <%= form.text_field :name, class: "form-control", placeholder: "nom du tag" %>
            </div>
            <!-- Boutons d'action -->
            <div class="d-flex justify-content-between mt-3">
              <%= form.submit "Créer le Tag", class: "btn btn-primary w-100 mb-3 mt-3 rounded-custom" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
