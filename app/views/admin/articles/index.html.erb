<div class="container mt-4">
  <div class="row">
    <div class="col-12 mb-4">
      <!-- Optionnel : une section pour un titre ou une description -->
    </div>

    <div class="col-12">
      <!-- Carte pour afficher la liste des articles -->
      <div class="card">
        <div class="card-body">
          <!-- Titre de la carte -->
          <h5 class="card-title">Gestion des Articles</h5>

          <!-- Bouton Retour au dashboard avec un espacement supérieur -->
          <%= link_to "Retour au dashboard", "/admin/dashboard", class: "btn btn-outline-secondary w-100 mb-3 mt-3 rounded-custom" %>
        </div>
        <div class="card-body">
          <!-- Table des articles -->
          <table class="table table-bordered">
            <thead>
              <tr>
                <th>ID</th>
                <th>Titre</th>
                <th>Date</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @articles.each do |article| %>
                <tr>
                  <td><%= article.id %></td>
                  <td><%= article.title %></td>
                  <td><%= l(article.created_at, format: :short) %></td>
                  <td>
                    <!-- Groupement des boutons -->
                    <div class="d-flex align-items-center gap-2">
                      <%= link_to "Modifier", edit_admin_article_path(article), class: 'btn btn-primary btn-sm rounded-custom' %>
                      <%= form_with(model: article, url: admin_article_path(article), method: :delete, local: true) do |form| %>
                        <%= form.submit "Supprimer", class: 'btn btn-danger btn-sm rounded-custom', data: { confirm: "Êtes-vous sûr ?" } %>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>

          <!-- Pagination -->
          <div class="d-flex justify-content-center mt-3">
            <%= render 'kaminari/articles_pagination', articles: @articles %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
