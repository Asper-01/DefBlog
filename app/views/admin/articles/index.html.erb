<div class="container mt-4">
  <div class="row">
    <div class="col-12 mb-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Créer un nouvel article</h5>
          <%= link_to "Nouvel Article", new_admin_article_path, class: "btn btn-primary" %>
        </div>
      </div>
    </div>

    <div class="col-12">
      <!-- Carte pour afficher la liste des articles -->
      <div class="card">
        <div class="card-header">
          <h5 class="card-title mb-0">Gestion des Articles</h5>
        </div>
        <div class="card-body">
          <table class="table table-bordered">
            <thead>
              <tr>
                <th>ID</th>
                <th>Titre</th>
                <th>Date</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @articles.each do |article| %>
                <tr>
                  <td><%= article.id %></td>
                  <td><%= article.title %></td>
                  <td><%= l(article.created_at, format: :short) %></td>
                  <td>
                    <%= link_to "Modifier", edit_admin_article_path(article), class: "btn btn-warning btn-sm" %>
                    <!-- Formulaire pour supprimer un article -->
                    <%= form_with(model: article, url: admin_article_path(article), method: :delete, local: true) do |form| %>
                      <%= form.submit "Supprimer", class: "btn btn-danger btn-sm", data: { confirm: "Êtes-vous sûr ?" } %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>

          <!-- Pagination -->
          <div class="d-flex justify-content-center">
            <%= paginate @articles %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
