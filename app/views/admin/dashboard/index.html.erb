<div class="container mt-4">
  <h1 class="text-center mb-4" style="font-family: 'Poppins', sans-serif; color: #2c3e50;">Bienvenue dans l'espace admin</h1>

  <!-- Bouton retour à l'accueil en noir -->
  <%= link_to "Retour à l'acceuil", "/articles", class: "btn btn-outline-secondary w-100 mb-3 mt-3 rounded-custom" %>

  <div class="row justify-content-center mt-3">
    <!-- Carte pour gérer les articles -->
    <div class="col-10 mb-4">
      <div class="card h-100">
        <div class="card-body d-flex align-items-center">
          <!-- Logo pour les articles (plus gros à gauche) -->
          <i class="fas fa-file-alt fa-4x" style="color: #2c3e50; flex-shrink: 0; margin-left: 20px; margin-right: 20px;"></i>

          <div class="w-100">
            <!-- Titre centré -->
            <h5 class="card-title text-center" style="font-size: 1.4rem; color: #2c3e50;">Les Articles</h5>

            <!-- Description placée au-dessus des boutons -->
            <p class="card-text text-center" style="color: #7f8c8d;">Créer ou modifier</p>

            <!-- Boutons pour les articles, réduits -->
            <div class="d-flex justify-content-center gap-2">
              <%= link_to "Nouveau", new_admin_article_path, class: "btn btn-outline-primary w-25 p-2 rounded-custom" %>
              <%= link_to "Gérer", admin_articles_path, class: "btn btn-outline-primary w-25 p-2 rounded-custom" %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Carte pour gérer les tags -->
    <div class="col-10 mb-4">
      <div class="card h-100">
        <div class="card-body d-flex align-items-center">
          <!-- Logo pour les tags -->
          <i class="fas fa-tag fa-4x" style="color: #2c3e50; flex-shrink: 0; margin-left: 20px; margin-right: 20px;"></i>

          <div class="w-100">
            <!-- Titre centré -->
            <h5 class="card-title text-center" style="font-size: 1.4rem; color: #2c3e50;">Les Tags</h5>

            <!-- Description placée au-dessus des boutons -->
            <p class="card-text text-center" style="color: #7f8c8d;">Créer ou modifier</p>

            <!-- Boutons pour les tags, réduits -->
            <div class="d-flex justify-content-center gap-2">
              <%= link_to "Nouveau", new_admin_tag_path, class: "btn btn-outline-primary w-25 p-2 rounded-custom" %>
              <%= link_to "Gestion", admin_tags_path, class: "btn btn-outline-primary w-25 p-2 rounded-custom" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
