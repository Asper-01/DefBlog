<%# app/views/kaminari/_paginator.html.erb %>
<nav aria-label="Page navigation">
  <ul class="pagination">
    <% if paginator.total_pages > 1 %>
      <% if paginator.current_page > 1 %>
        <li class="page-item">
          <%= link_to 'Previous', paginator.previous_page, class: 'page-link' %>
        </li>
      <% else %>
        <li class="page-item disabled">
          <span class="page-link">Previous</span>
        </li>
      <% end %>

      <% paginator.each_page do |page| %>
        <li class="page-item <%= 'active' if page == paginator.current_page %>">
          <%= link_to page, page, class: 'page-link' %>
        </li>
      <% end %>

      <% if paginator.current_page < paginator.total_pages %>
        <li class="page-item">
          <%= link_to 'Next', paginator.next_page, class: 'page-link' %>
        </li>
      <% else %>
        <li class="page-item disabled">
          <span class="page-link">Next</span>
        </li>
      <% end %>
    <% end %>
  </ul>
</nav>
