<div class="container mt-4">
  <div class="row">
    <div class="col-12 mb-4">
      <!-- Carte pour afficher les détails du tag -->
      <div class="card">
        <div class="card-body">
          <!-- Affichage du nom du tag -->
          <h5 class="card-title">Tag: <%= @tag.name %></h5>

          <!-- Ajoute une description ou d'autres informations si nécessaire -->
          <p class="card-text">
            Ce tag est utilisé pour classer des articles relatifs à <%= @tag.name %>.
            <!-- Ajoute d'autres informations sur le tag si nécessaire -->
          </p>

          <!-- Lien pour revenir à la liste des tags -->
          <%= link_to 'Retour à la liste des tags', tags_path, class: 'btn btn-secondary' %>
        </div>
      </div>
    </div>
  </div>
</div>
