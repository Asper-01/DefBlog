<div class="container mt-4">
  <div class="row justify-content-center">
    <!-- Première carte pour la création de tag -->
    <div class="col-md-6 mb-4">
      <div class="card shadow-sm">
        <div class="card-body">
          <h1 class="card-title">Créer un Nouveau Tag</h1>
          <%= form_with(model: @tag, local: true) do |form| %>
            <div class="form-group mb-3">
              <%= form.label :name, "Nom du tag", class: "form-label" %>
              <%= form.text_field :name, class: "form-control" %>
            </div>
            <div class="d-flex justify-content-between">
              <%= form.submit "Créer le tag", class: "btn btn-primary" %>
              <%= link_to 'Retour', tags_path, class: 'btn btn-secondary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Deuxième carte pour l'index et la gestion CRUD des tags -->
    <div class="col-md-6 mb-4">
      <div class="card shadow-sm">
        <div class="card-body">
          <h1 class="card-title">Gestion des Tags</h1>
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Nom</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @tag2.each do |tag| %>
                <tr>
                  <td><%= tag.name %></td>
                  <td>
                    <%= link_to 'Voir', tag_path(tag), class: 'btn btn-sm btn-info me-2' %>
                    <%= link_to 'Modifier', edit_tag_path(tag), class: 'btn btn-sm btn-warning me-2' %>
                    <%= link_to 'Supprimer', tag_path(tag), method: :delete, data: { confirm: 'Es-tu sûr?' }, class: 'btn btn-sm btn-danger' %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
