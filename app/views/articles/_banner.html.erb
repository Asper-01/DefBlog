<div class="banner-container">
  <% if @articles.any? %>
    <div class="banner-row">
      <!-- Div de l'image -->
      <div class="banner-image-container">
        <% if @articles.first.image.attached? %>
          <%= image_tag @articles.first.image, class: 'banner-image' %>
        <% else %>
          <p class="banner-no-image">Aucune image disponible</p>
        <% end %>
      </div>
      <!-- Div du texte -->
      <div class="banner-text-container">
        <h5 class="banner-title"><%= @articles.first.title %></h5>

        <!-- Nom de l'auteur -->
        <p class="banner-author">Par <%= @articles.first.author.name %></p>


        <!-- Tags sous forme de texte cliquable -->
        <p class="banner-tags">
          <% @articles.first.tags.limit(2).each do |tag| %>
            <%= link_to tag.name, tag_path(tag), class: 'tag-link' %><%= ", " unless tag == @articles.first.tags.limit(2).last %>
          <% end %>
        </p>

        <!-- Résumé du contenu -->
        <p class="banner-text"><%= truncate(@articles.first.content, length: 200) %></p>
      </div>
    </div>
  <% end %>
</div>
