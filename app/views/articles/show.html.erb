<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8"> <!-- Largeur plus grande -->

      <!-- Carte de l'article avec bord arrondi et ombre légère -->
      <div class="card shadow-sm rounded">

        <!-- Affichage de l'image de l'article -->
        <div class="card-img-top">
          <% if @article.image.attached? %>
            <%= image_tag @article.image, class: "card-img" %> <!-- Image s'adapte à la largeur de la carte -->
          <% else %>
            <p>Aucune image disponible</p>
          <% end %>
        </div>

        <!-- Informations de l'article -->
        <div class="card-body">
          <h1 class="card-title mb-3"><%= @article.title %></h1> <!-- Titre en plus grand -->
          <p class="card-text text-muted mb-4"><%= truncate(@article.content, length: 250) %></p> <!-- Extrait de contenu avec coupure à 250 caractères -->
        </div>

      </div>

      <!-- Boutons en dehors de la carte, sur une nouvelle ligne -->
      <div class="mt-4">
        <%= link_to 'Modifier cet article', edit_article_path(@article), class: 'btn btn-primary rounded-pill mr-2' %>
        <%= link_to 'Supprimer cet article', article_path(@article), method: :delete, data: { confirm: "Êtes-vous sûr ?" }, class: 'btn btn-danger rounded-pill' %>
      </div>

    </div>
  </div>
</div>
