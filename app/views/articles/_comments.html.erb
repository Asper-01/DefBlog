    <div class="col-lg-8 col-md-10">
      <div class="card">
        <div class="card-body">
          <h3>Ajouter un commentaire</h3>
          <%= form_with model: [@article, Comment.new], local: true do |form| %>
            <div class="mb-3">
              <%= form.label :content, "Votre commentaire", class: "form-label" %>
              <%= form.text_area :content, rows: 4, class: "form-control", placeholder: "RÃ©digez votre commentaire ici..." %>
            </div>
            <div class="d-grid gap-2">
              <%= form.submit "Envoyer", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
